<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Setting">

    <LinearLayout
        android:id="@+id/settLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_to_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3.7"
                android:text="Settings"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center|start"
                android:paddingStart="10dp"/>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/setting"
                android:layout_weight="0.4"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:background="@drawable/spalsh_design"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/alert"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:text="Enable Alert"
                android:paddingStart="10dp"
                android:textColor="@color/second"
                android:textSize="16sp"
                android:gravity="center|start"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/enAlert"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:background="@drawable/spalsh_design"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shake"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:text="Enable Vibration with  Alert"
                android:paddingStart="10dp"
                android:textColor="@color/second"
                android:textSize="16sp"
                android:gravity="center|start"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vibAlert"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:background="@drawable/spalsh_design"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:src="@drawable/call"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:text="Enable Call with alert"
                android:paddingStart="10dp"
                android:textColor="@color/second"
                android:textSize="16sp"
                android:gravity="center|start"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/callAlert"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/numLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:background="@drawable/spalsh_design"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:layout_gravity="top"
                    android:src="@drawable/phone"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="3.8"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="Set Default Phone Number \n for Call one of them"
                       android:paddingStart="10dp"
                       android:textColor="@color/second"
                       android:textSize="16sp"
                       android:gravity="center|start"/>

                   <RadioGroup
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/radioGroup"
                       android:orientation="vertical"
                       android:layout_marginTop="14dp"
                       android:gravity="start"
                       android:checkedButton="1"
                       >

                       <CheckBox
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="guardien 1"
                           android:id="@+id/checkBoxA"
                           android:buttonTint="@color/second"
                           android:layout_above="@+id/escudo"
                           android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true"
                           android:onClick="onCheckboxClicked" />

                       <CheckBox
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Guardien 2"
                           android:id="@+id/checkBoxB"
                           android:buttonTint="@color/second"
                           android:layout_alignTop="@+id/checkBoxA"
                           android:layout_toRightOf="@+id/checkBoxA"
                           android:layout_toEndOf="@+id/checkBoxA"
                           android:onClick="onCheckboxClicked"/>

                       <CheckBox
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Police"
                           android:id="@+id/checkBoxC"
                           android:buttonTint="@color/second"
                           android:layout_alignTop="@+id/checkBoxB"
                           android:layout_toRightOf="@+id/checkBoxB"
                           android:layout_toEndOf="@+id/checkBoxB"
                           android:onClick="onCheckboxClicked"/>

                   </RadioGroup>

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/set"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="Set"
                       android:textStyle="bold"
                       android:textAllCaps="false"
                       android:background="#00000000"
                       android:textColorHint="@color/first"
                       android:layout_gravity="end"/>

               </LinearLayout>


            </LinearLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>